@model Assignment.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableQuanlity" class="control-label"></label>
                <input asp-for="AvailableQuanlity" class="form-control" />
                <span asp-validation-for="AvailableQuanlity" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="CatagoryId" class="control-label">Category</label>
                <select class="form-select form-select-sm" aria-label=".form-select-sm example" asp-for="CatagoryId">

                    @foreach (Category ct in ViewBag.category)
                    {
                            <option value="@ct.Id">@ct.Name</option>
                    }

                </select>
                <span asp-validation-for="CatagoryId" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="SupplierId" class="control-label">Supplier</label>
                    <select class="form-select form-select-sm" aria-label=".form-select-sm example" asp-for="SupplierId">

                    @foreach (Supplier sl in ViewBag.supplier)
                    {
                                <option value="@sl.Id">@sl.Name</option>
                    }

                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>
          	<div class="form-group">
				<label asp-for="SizeId" class="control-label">Size</label>
				<select class="form-select form-select-sm" aria-label=".form-select-sm example" asp-for="SizeId">

					@foreach (Size s in ViewBag.size)
					{
						<option value="@s.Id">@s.NameSize</option>
					}

				</select>
				<span asp-validation-for="SizeId" class="text-danger"></span>
			</div>
            <div class="form-group">
                <label asp-for="ColorId" class="control-label">Color</label>
                <select class="form-select form-select-sm" aria-label=".form-select-sm example" asp-for="ColorId">

                    @foreach (Color c in ViewBag.color)
                    {
                        <option value="@c.ID">@c.NameColor</option>
                    }

                </select>
                <span asp-validation-for="ColorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
